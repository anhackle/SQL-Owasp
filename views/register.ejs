<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input  id="password-check" type="password" class="form-control" name="password">
            </div>
            <button disabled="disabled" type="submit" class="btn btn-dark">Register</button>
            <ul style="padding-top: 20px;">
              <li class="check_1">[0-9]</li>
              <li class="check_2">[a-z]</li>
              <li class="check_3">[A-Z]</li>
              <li class="check_4">[!@#$%^&*+_()]</li>
              <li class="check_5">At least 8 characters</li>
            </ul>
          </form>

        </div>
      </div>
    </div>

